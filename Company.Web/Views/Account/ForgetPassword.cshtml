@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="col-lg-6 col-md-6 infinity-form-container">
	<div class="col-lg-8 col-md-12 col-sm-8 col-xs-12 infinity-form">
		<div class="reset-form d-block">
			<form asp-action="ForgetPassword" method="post" class="reset-password-form px-3">
				<h4 class="mb-3">Reset Your Password</h4>
				<p class="mb-3 text-white">
					Please Enter your Email Address and we will Send you a Password Reset link.
				</p>

				<div class="form-input">
					<span><i class="fa fa-envelope"></i></span>
					<input asp-for="Email" type="email" placeholder="Email Address" tabindex="10" required>
				</div>
				<div class="mb-3">
					<button type="submit" class="btn">Send Reset Link</button>
				</div>
			</form>
		</div>
</div>