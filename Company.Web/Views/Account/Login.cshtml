@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="col-lg-6 col-md-6 infinity-form-container">
	<div class="col-lg-9 col-md-12 col-sm-9 col-xs-12 infinity-form">
		<div class="text-center mb-4">
			<h4>Login into your account</h4>
		</div>
		<!-- Form -->
		<form class="px-3" asp-action="Login">
			<!-- Input Box -->
			<div class="form-input">
				<span><i class="fa fa-envelope-o"></i></span>
				<input type="email" asp-for="Email" placeholder="Email Address" tabindex="10" required>
			</div>
			<div class="form-input">
				<span><i class="fa fa-lock"></i></span>
				<input type="password" asp-for="Password" placeholder="Password" required>
			</div>
			<div class="row mb-3">
				<!-- Remember Checkbox -->
				<div class="col-auto d-flex align-items-center">
					<div class="custom-control custom-checkbox">
						<input type="checkbox" asp-for="RememberMe" class="custom-control-input" id="cb1">
						<label class="custom-control-label text-white" for="cb1">Remember me</label>
					</div>
				</div>
			</div>
			<!-- Login Button -->
			<div class="mb-3">
				<button type="submit" class="btn btn-block">Login</button>
			</div>
			<div class="text-right ">
				<a asp-action="ForgetPassword" class="forget-link">Forgot password?</a>
			</div>
			<div class="text-center mb-2">
				<div class="text-center mb-5 text-white">
					Don't have an account?
					<a class="register-link" asp-action="SignUp">Register Now!</a>
				</div>
		</form>
	</div>
</div>

