@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}
<h1>All Users</h1>
<br />
<br />
<div class="row justify-content-center align-items-center my-3">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="searchInp" placeholder="Search By Email" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-secondary" />
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U => U.Id)</th>
                <th>@Html.DisplayNameFor(U => U.UserName)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.Id
                    </td>
                    <td>
                        @user.UserName
                    </td>
                    <td>
                        @user.Email
                    </td>
                    <partial name="_ActionButtonsPartialView" model="@user.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger" role="alert">
        There Are No Employees !!!!
    </div>
}
