@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}
<div class="my-5">
    <a class="btn btn-primary" asp-controller="Department" asp-action="Create">Create New Department</a>
</div>
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.CreateAt)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>
                        @department.Name
                    </td>
                    <td>
                        @department.Code
                    </td>
                    <td>
                        @department.CreateAt
                    </td>
                    <td>
                        <a class="btn btn-outline-success" asp-action="Details" asp-route-id="@department.Id">
                            Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@department.Id">
                            Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@department.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger" role="alert">
        There Are No Deparments !!!!
    </div>
}

