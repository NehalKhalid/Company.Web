@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
}
<h1>All Departments</h1>
<br />
<div class="my-1">
    <a class="btn btn-primary" asp-controller="Department" asp-action="Create">Create New Department</a>
</div>
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.CreateAt)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>
                        @department.Name
                    </td>
                    <td>
                        @department.Code
                    </td>
                    <td>
                        @department.CreateAt
                    </td>
                    <partial name="_ActionButtonsPartialView" model="@department.Id"/>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger" role="alert">
        There Are No Deparments !!!!
    </div>
}

